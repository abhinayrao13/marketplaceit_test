<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label", for: :name %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :start_time, class: "col-sm-2 col-form-label", for: :start_time %>
    <div class="col-sm-10">
      <%= form.datetime_select :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :end_time, class: "col-sm-2 col-form-label", for: :end_time %>
    <div class="col-sm-10">
      <%= form.datetime_select :end_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row" id="meetings">
    <div class="col-sm-10">
      <%= form.fields_for :meetings do |meeting| %>
        <%= render "meeting_fields", f: meeting %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association 'Add Session', form, :meetings, class: "form-label" %>
      </div>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-12">
      <%= form.submit "Save", class:"btn btn-primary float-right" %>
    </div>
  </div>
<% end %>
