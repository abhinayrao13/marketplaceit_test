<div class="nested-fields">
  <hr>
  <div class="form-group row">
    <%= f.label :name, class: "col-sm-2 col-form-label", for: :name %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :start_time, class: "col-sm-2 col-form-label", for: :start_time %>
    <div class="col-sm-10">
      <%= f.datetime_select :start_time, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :end_time, class: "col-sm-2 col-form-label", for: :end_time %>
    <div class="col-sm-10">
      <%= f.datetime_select :end_time, class: "form-control" %>
    </div>
  </div>

  <%= link_to_remove_association "Remove", f, class: "form-label" %>
</div>
