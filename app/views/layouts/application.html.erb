<!DOCTYPE html>
<html>
  <head>
    <title>MarketplaceitTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="javascript:void(0)">MarketPlace IT</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% if user_signed_in? %>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active">
                <a class="nav-link" href="<%= root_path %>">Home</a>
              </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
              <%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, class: "btn btn-outline-danger my-2 my-sm-0" %>
            </form>
          </div>
        <% end %>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
